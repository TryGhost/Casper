<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/prismjs@1/themes/prism-okaidia.css"/>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/featherlight@1/release/featherlight.min.css"/>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastr@2/build/toastr.min.css"/>

<style>
  video {
    cursor: pointer;
  }

  #spinner-overlay {
    position: fixed;
    top: 0;
    z-index: 10000;
    width: 100%;
    height: 100%;
    display: none;
    background: rgba(0,0,0,0.6);
  }
  .spinner-wrapper {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;  
  }
  .spinner {
    width: 40px;
    height: 40px;
    border: 4px #ddd solid;
    border-top: 4px #2e93e6 solid;
    border-radius: 50%;
    animation: spinner-anime 0.8s infinite linear;
  }
  @keyframes spinner-anime {
    100% { 
      transform: rotate(360deg); 
    }
  }

  .site-nav-search-input {
    width: 1.1em;
    height: 1.1em;
    border-style: none;
    border-radius: 1em;
    padding: .2em;
    background-image: url("data:image/svg+xml;base64,");
    background-repeat: no-repeat;
    background-position: center;
    background-size: .85em;
    transition: all 0.7s;
    vertical-align: middle;
    color: rgba(0, 0, 0, 0);
    cursor: pointer;
  }
  .site-nav-search-input:focus {
    width: 15em;
    padding: .45em 1.5em .45em .6em;
    background-position: 96% 50%;
    color: #171717;
    cursor: auto;
  }

  .featherlight-content {
    margin-left: 12% !important;
    margin-right: 12% !important;
    border-radius: .5em;
  }

  .featherlight-close-icon {
    top: .3em !important;
    right: .3em !important;
    font-size: 1.5em;
    color: #666 !important;
  }

  search-results ul {
    list-style: none;
    margin: 0;
    padding: 1em;
  }
  .search-results li {
    margin: 0;
    padding: 1.2em 1.7em;
    box-shadow: 0 .5em 1em -.125em rgba(10,10,10,.1), 0 0 0 1px rgba(10,10,10,.02);
    border-radius: .5em;
  }
  .search-title {
    margin: 0;
    font-size: .9em;
    font-weight: bold;
  }
  .search-content {
    margin: .75em 0 0;
    line-height: 1.2em;
    font-size: .85em;
  }
  .search-updated-at {
    color: #666;
  }
  .search-updated-at:after {
    content: " - ";
  }
</style>

