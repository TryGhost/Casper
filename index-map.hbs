{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}


<style>
    .map-description {
        display: inline-block;
        z-index: 10;
        max-width: 960px;
        font-size: 6rem;
        font-weight: 700;
        line-height: 1.1;
    }
    .post-card-tags,
    .post-card-meta,
    .post-card-excerpt {
        display: none;
    }
    .content-title-header {
        padding-top: 15px;
        padding-bottom: 0px;
        text-align: center;
    }
    .post-feed {
        padding-top: 10px !important;
    }
    .post-card-header {
        text-align: center;
    }
    .post-card-title {
        font-size: 2em;
    }
    .post-card-image-link {
        margin-bottom: 5px !important;
    }
    /* Map header container positioning */
    .map-header-container {
        position: relative;
    }
    /* Gradient fade for the map image */
    .map-gradient-fade {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 200px;
        background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, #151719 100%);
        z-index: 100;
        pointer-events: none;
    }
    /* Quote block styling */
    .map-quote-block {
        position: relative;
        left: 50%;
        width: 100vw;
        max-width: 100vw;    /* ensure it never shrinks */
        transform: translateX(-50%);
        box-sizing: border-box;
        padding: 40px 20px;
        margin: 30px 0;
        background-color: var(--ghost-accent-color);
        border-left: 5px solid #3eb0ef;
        font-size: 2rem;
        line-height: 1.6;
        font-style: italic;
        text-align: center;
    }
    .map-quote-block p {
        max-width: 800px;
        margin: 0 auto;
    }
    p.credit-quote-block {
        text-align: right !important;
        font-size: 2em;
        font-style: none;
    }
</style>

<div class="site-header-content outer{{#match @custom.header_style "Left aligned"}} left-aligned{{/match}}{{#unless @custom.show_publication_cover}}{{#match @custom.header_style "Hidden"}} no-content{{/match}}{{/unless}}">

{{!-- Use responsive image from the Pyora map post --}}
{{#get "posts" filter="slug:pyora" limit="1"}}
  {{#foreach posts}}
    {{!-- 2) Now `this.feature_image` holds that postâ€™s featured image URL --}}
    {{#if feature_image}}
     <img class="site-header-cover"
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                sizes="100vw"
                src="{{img_url feature_image size="xl"}}"
                alt="Explore the world of Pyora"
    />
    <div class="site-header-inner inner">
        <p class="map-description"></p>
    </div>
    <div class="map-gradient-fade"></div>
    {{else}}
      <p>(Error: post context has no featured image.)</p>
    {{/if}}
  {{/foreach}}
{{/get}}

</div>

{{!-- The main content area --}}
<main id="site-main" class="site-main outer">
<div class="inner posts">
    <div class="post-card-header"><h1 class="content-title-header">Explore Pyora</h1></div>
    <div class="post-feed">
        {{#foreach posts limit="3"}}
            {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
            {{> "post-card"}}
        {{/foreach}}
    </div>

    {{!-- Quote block that spans full width --}}
    <div class="map-quote-block">
        <p>"Even a blind dwarf navigator is worth more than ten sailors with compasses."</p>
        <p class="credit-quote-block">- Captain Strezza</p>
    </div>
    <div class="post-feed">
        {{#foreach posts from="4"}}
            {{> "post-card"}}
        {{/foreach}}
    </div>

</div>
</main>
