<article class="post-card {{post_class}}{{#unless feature_image}} no-image{{/unless}}">
    {{#if feature_image}}
        <a class="post-card-image-link" href="{{url}}">
            <div class="post-card-image" style="background-image: url({{feature_image}})"></div>
        </a>
    {{/if}}
    <div class="post-card-content">
        <a class="post-card-content-link" href="{{url}}">
            <header class="post-card-header">
                {{#if primary_tag}}
                    <span class="post-card-tags">{{primary_tag.name}}</span>
                {{/if}}
                <h2 class="post-card-title">{{title}}</h2>
            </header>
            <section class="post-card-excerpt">
                <p>{{excerpt words="33"}}</p>
            </section>
        </a>
        <footer class="post-card-meta">

            {{!-- If there are multiple authors for the post, display all of their avatars in a stack --}}
            {{#has author="count:>1"}}

                <ul class="author-list">
                {{#foreach authors}}
                    <li class="author-list-item">
                        {{#if profile_image}}
                            <span class="author-image"><img class="author-profile-image" src="{{profile_image}}" alt="{{name}}" /></span>
                        {{else}}
                            <span class="author-avatar">{{> "icons/avatar"}}</span>
                        {{/if}}
                    </li>
                {{/foreach}}
                </ul>

            {{!-- If there is a single author for the post, display her/his avatar and name  --}}
            {{else}}

                {{#if author.profile_image}}
                    <img class="author-profile-image" src="{{author.profile_image}}" alt="{{author.name}}" />
                {{else}}
                    <span class="author-avatar">{{> "icons/avatar"}}</span>
                {{/if}}
                <span class="post-card-author">{{author}}</span>

            {{/has}}
        </footer>
    </div>
</article>
