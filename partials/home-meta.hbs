<meta property="og:title" content="{{meta_title}}" />
<meta property="og:description" content="{{meta_description}}" />
<meta property="og:type" content="website" />
<meta property="og:site_name" content="{{@blog.title}}">
<meta property="og:url" content="{{@blog.url}}{{url}}"/>
<meta property="og:image" content="{{@blog.url}}/assets/facebook-image.png" />
<meta name="twitter:title" content="{{meta_title}}" />
<meta name="twitter:description" content="{{meta_description}}" />
<meta name="twitter:url" content="{{@blog.url}}{{url}}" />
{{#if @blog.cover}}
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:image:src" content="{{@blog.url}}/assets/facebook-image.png" />
{{else}}
  {{#if @blog.logo}}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image:src" content="{{@blog.url}}{{@blog.logo}}" />
  {{/if}}
{{/if}}