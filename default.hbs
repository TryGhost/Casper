    $(document).ready(function() {
        "use strict";

        let body = $('body'),
            site_search = $('#site-search'),
            search_results = $('#search-results'),
            search_field = $('#search-field'),
            search_close_button = $('#site-search .close'),
            search_toggle = $('#search-toggle');

        search_toggle.on('click', function () {
            site_search.toggle();
            search_field.focus();
        });

        search_close_button.on('click', function() {
            site_search.fadeOut(250);
            body.removeClass('is-search-on');
            search_field.val('');
        });

        search_field.keyup(function(e) {
            if (e.key === 'Escape') {
                search_toggle.trigger('click');
            }
        });

        search_field.ghostHunter({
            results: "#search-results",
            result_template: "<a id='gh-\{{ref}}' class='gh-search-item' href='\{{link}}'><span class='post-title'>\{{title}}</span></a>",
            info_template: '<div class="result-count is-size-5">{{t "Number of posts found: {count}" count="\{{amount}}" }} </div>',
            onKeyUp: true,
            before: function() {
                search_results.fadeIn();
            },
            onComplete: function() {
                if (search_results.find('a').length) {
                    search_results.addClass('has-result');
                } else {
                    search_results.removeClass('has-result');
                }
            },
        });

